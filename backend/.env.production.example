# Production Environment Configuration
# This file is an example - actual values are set via GitHub Secrets

NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration (PostgreSQL + TimescaleDB)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=monitor_db
DB_USER=monitor_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=https://monitoreo.victalejo.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Firebase Cloud Messaging (optional - for future mobile notifications)
FCM_SERVER_KEY=
FCM_PROJECT_ID=
